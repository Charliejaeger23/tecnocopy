# Sample environment variables for TeknoCopy
# Copy to .env and fill with real values.

# STEL API configuration
STEL_BASE_URL=https://app.stelorder.com/app
STEL_API_KEY=your_api_key_here
STEL_PAGE_SIZE=200

# SQLite database path
DB_PATH=./tekno.db

# Google Sheets configuration
SHEETS_SPREADSHEET_ID=your_sheet_id_here
GOOGLE_APPLICATION_CREDENTIALS=./service_account.json

# Sync interval in seconds
SYNC_INTERVAL_SECONDS=60

# Backend network configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
